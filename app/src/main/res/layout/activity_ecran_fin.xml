<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#aec8ac"
    tools:context=".Ecran_fin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="La fin du Jeu - Vous avez Perdu!!"
            android:layout_weight="0.1"
            android:layout_gravity="top"
            android:gravity="center"
            android:textSize="22dp">

        </TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/annubis"
            android:layout_weight="1">
        </ImageView>

        <TextView
            android:id="@+id/TopScore1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text=""
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="22dp">
        </TextView>

        <TextView
            android:id="@+id/TopScore2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text=""
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="22dp">
        </TextView>

        <TextView
            android:id="@+id/TopScore3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text=""
            android:layout_weight="0.1"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="22dp">
        </TextView>


        <Button
            android:id="@+id/Recommencer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Recommencer !!"
            android:textSize="20dp"
            android:layout_gravity="bottom"
            android:layout_margin="15dp"
            android:layout_weight="0.1">
        </Button>


    </LinearLayout>






</LinearLayout>